    "id": "TC018",
    "title": "Radial stats animate from 0 to target values when stats section enters viewport",
    "description": "Verifies that stat counters/indicators animate upon entering the viewport and reach their target display values.",
    "category": "Visual & Interactive Effects",
    "priority": "High",
    "steps": [
      {
        "type": "action",
        "description": "Navigate to /"
      },
      {
        "type": "action",
        "description": "Scroll to the \"Stats\" section"
      },
      {
        "type": "assertion",
        "description": "Verify element \"radial stat 1\" is visible"
      },
      {
        "type": "assertion",
        "description": "Verify text \"0\" is visible within a radial stat value display (initial state)"
      },
      {
        "type": "action",
        "description": "Wait for 2 seconds"
      },
      {
        "type": "assertion",
        "description": "Verify the radial stat value display is greater than 0 (no longer shows only \"0\")"
      },
      {
        "type": "action",
        "description": "Wait for 3 seconds"
      },
      {
        "type": "assertion",
        "description": "Verify the radial stat value display shows its final target value (stops changing)"
      }
    ]
  },
